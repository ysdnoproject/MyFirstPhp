{% extends 'base.html.twig' %}
{% form_theme form "bootstrap_3_horizontal_layout.html.twig" %}

{% block body %}
    <div class="container">
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.username) }}
        <div class="col-sm-4">
        {{ form_widget(form.username, { 'attr': { 'placeholder': 'Username', 'class': 'form-control' }}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.email) }}
        <div class="col-sm-4">
            {{ form_widget(form.email, { 'attr': { 'placeholder': 'Email', 'class': 'form-control' }}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.phonenum) }}
        <div class="col-sm-4">
            {{ form_widget(form.phonenum, { 'attr': { 'placeholder': 'Phonenum', 'class': 'form-control' }}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.plainPassword.first) }}
        <div class="col-sm-4">
            {{ form_widget(form.plainPassword.first, { 'attr': { 'placeholder': 'Password', 'class': 'form-control' }}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.plainPassword.second) }}
        <div class="col-sm-4">
            {{ form_widget(form.plainPassword.second, { 'attr': { 'placeholder': 'Repeat Password', 'class': 'form-control' }}) }}
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
            <button type="submit" class="btn btn-lg btn-primary btn-block">Register!</button>
        </div>
    </div>
    {{ form_end(form) }}
    </div>
{% endblock %}